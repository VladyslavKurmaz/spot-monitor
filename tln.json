{
  "env": {
  },
  "stages":{
    "build":{
      "script":[
        "DIR=$(dirname \"$(readlink -f \"$0\")\")",
        "mvn clean install"
      ]
    },
    "build-with-docker":{
      "script":[
        "DIR=$(dirname \"$(readlink -f \"$0\")\")",
        "docker run --rm -v $DIR:$DIR maven:3.5-jdk-8 mvn -f $DIR clean install"
      ]
    },
    "exec":{
      "script":[
        "mvn exec:java"
      ]
    }
  }
}